<launch>
  <arg name="debug" default="false"/>
  <arg if="$(arg debug)" name="launch_prefix" value="xterm -rv -e gdb -ex run -args"/>
  <arg unless="$(arg debug)" name="launch_prefix" value=""/>
  <remap from="camera" to="camera2" />
  <node pkg="openni_camera" type="openni_node" name="openni_node2" output="screen" launch-prefix="$(arg launch_prefix)">
    <!--param name="topic" value="first" /-->
    <!--param name="device_id" value="2@3" --> <!-- this line uses device on usb bus 2 and addres 3 -->
    <param name="device_id" value="A00366809972044A"/> <!-- this line uses device with given serial number of davids kinect2 -->
    <!--param name="device_id" value="A00365914089039A"/--> <!-- this line uses device with given serial number of Davids first (old) kinect-->
    
    <!--param name="device_id" value="#2"/--> <!-- this line uses first enumerated device -->
    <rosparam command="load" file="$(find openni_camera)/info/openni_params.yaml" />
    <param name="rgb_frame_id" value="/openni_rgb_optical_frame2" />
    <param name="depth_frame_id" value="/openni_depth_optical_frame2" />
    <param name="use_indices" value="false" />
    <param name="depth_registration" value="true" />
    <param name="image_mode" value="2" />
    <param name="depth_mode" value="2" />
    <param name="debayering" value="2" />
    <param name="depth_time_offset" value="0" />
    <param name="image_time_offset" value="0" />

  </node>
  <include file="$(find graspingDemoTUWUObjects)/launch/kinect_frames_moving_cameraKinect2.launch"/>
</launch>
